<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/vitalsh_layout"
    android:background="#ffffff"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageViewnotif"
        android:src="@drawable/ic_notif2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/imagenotif"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_notif2"


        />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagenotif"
        android:layout_marginStart="60dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="33dp"

        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ndate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:textSize="11sp"
        android:singleLine="false"
        android:textColor="@color/black"
        android:layout_below="@+id/company"
        android:layout_alignLeft="@+id/company"
        android:textStyle="bold"
        android:text=""/>
    <TextView
        android:id="@+id/rdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:textSize="15sp"
        android:singleLine="false"
        android:layout_below="@+id/ndate"
        android:layout_alignLeft="@+id/ndate"
        android:textStyle="bold"
        android:text=""/>

    <ImageView
        android:id="@+id/delan"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:gravity="right"
        android:src="@drawable/delicon"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>

