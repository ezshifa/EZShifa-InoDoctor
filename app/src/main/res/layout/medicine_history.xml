<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F7"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/med_history_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/medicine_history_back_btn"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_marginStart="8dp"
                android:layout_width="36dp"
                android:scaleType="center"
                android:layout_height="36dp" />

            <TextView
                android:id="@+id/appointment_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/medicine_history_title"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ProgressBar
        android:id="@+id/progress_load_mss"
        android:layout_centerInParent="true"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:visibility="gone"

        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/meedtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/med_history_toolbar"
        android:textStyle="bold"
        android:textColor="#000000"
        />
</RelativeLayout>