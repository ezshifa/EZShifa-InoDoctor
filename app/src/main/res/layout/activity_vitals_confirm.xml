<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/vitals_confirm_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/appointment_details_back_btn"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="36dp"
                    android:scaleType="center"
                    android:layout_height="36dp" android:visibility="gone"/>

                <TextView
                    android:id="@+id/appointment_activity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:text="Vitals Confirmation"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/weightt_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/vitals_confirm_toolbar"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_temp"
                android:background="@drawable/detbtn"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tempicon"
                    android:src="@drawable/temperatureicon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/tempicon"
                    android:text="Temparature"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/temptxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text=""
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_bp"
                android:background="@drawable/detbtn"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/bpicon"
                    android:src="@drawable/bpicon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/bpicon"
                    android:text="Blood Pressure"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/bptxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text=""
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weightt_layout2"
            android:layout_width="match_parent"
            android:layout_below="@+id/weightt_layout"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_pulse"
                android:background="@drawable/detbtn"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/pulseicon"
                    android:src="@drawable/heartrateicon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/pulseicon"
                    android:text="Pulse Rate"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/pulsetxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text=""
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_breathing"
                android:background="@drawable/detbtn"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/breathicon"
                    android:src="@drawable/breathicon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/breathicon"
                    android:text="Breathing Rate"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/breathtxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text=""
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weightt_layout3"
            android:layout_width="match_parent"
            android:layout_below="@+id/weightt_layout2"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_ocygen"
                android:background="@drawable/detbtn"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/oxygenicon"
                    android:src="@drawable/oxygenicon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/oxygenicon"
                    android:text="Oxygen "
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/oxygentxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text=""
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_sugar"
                android:background="@drawable/detbtn"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/sugaricon"
                    android:src="@drawable/sugaricon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/sugaricon"
                    android:text="Sugar Level"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/sugartxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text=""
                    />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weightt_layout4"
            android:layout_width="match_parent"
            android:layout_below="@+id/weightt_layout3"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_height"
                android:background="@drawable/detbtn"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/heighticon"
                    android:src="@drawable/heighticon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/heighticon"
                    android:text="Height"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/heighttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text=""
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_weight"
                android:background="@drawable/detbtn"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/weighticon"
                    android:src="@drawable/weighticon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/weighticon"
                    android:text="Weight"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/weighttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text=""
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/weightt_layout5"
            android:layout_width="match_parent"
            android:layout_below="@+id/weightt_layout4"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_heightb"

                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addvitalsbtn"
                    android:text="Save Vitals"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="#CD1716"
                    android:layout_below="@+id/vitals_layout"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vitalsh_layout_weightb2"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backbtn"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp"
                    android:background="#A2238C"
                    android:layout_below="@+id/vitals_layout"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_vc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</ScrollView>