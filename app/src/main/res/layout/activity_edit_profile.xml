            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/speciality_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants"
                android:layout_below="@+id/experience_layout"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">

                <TextView
                    android:id="@+id/blood_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speciality"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:enabled="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
                <Spinner
                    android:id="@+id/speciality_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/blood_text"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:hint="Speciality"
                    android:inputType="text"
                    android:maxLength="14"
                    android:textAlignment="center"
                    android:backgroundTint="@color/pink_dark_calendar"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp" />


                <ImageView android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_below="@id/speciality_spinner"
                    android:layout_marginTop="-23dp"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    />

                <ImageView android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/specialityicn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="2dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/countryy_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/speciality_layout"
                android:layout_marginTop="8dp"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <TextView
                    android:id="@+id/countryy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textSize="14sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:enabled="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />

                <Spinner
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/countryy_text"

                    android:textAlignment="center"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:backgroundTint="@color/pink_dark_calendar"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp"/>

                <ImageView android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:visibility="gone"
                    android:layout_marginTop="-23dp"
                    android:layout_alignParentEnd="true"
                    />

                <ImageView android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/countryicn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="2dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/countryy_layout"
                android:layout_marginTop="20dp"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <TextView
                    android:id="@+id/city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="14sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:enabled="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />
                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"

                    android:hint="City"
                    android:maxLength="20"
                    android:layout_below="@+id/city_text"

                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/pink_dark_calendar"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />

                <ImageView android:layout_width="9dp"
                    android:layout_height="9dp"

                    android:visibility="gone"
                    android:layout_marginTop="-23dp"
                    android:layout_alignParentEnd="true"
                    />

                <ImageView android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cityicn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="2dp"/>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <ProgressBar android:layout_width="70dp" android:layout_height="70dp"
    android:id="@+id/progressBar"
    android:visibility="invisible"
    android:layout_centerInParent="true"/>
</RelativeLayout>